<div class="container">
  <div class="row">
    <div class="inline col-4">
      <div class="card">
      <h3>Featured Movie</h3>
        <%= image_tag image_with_size(200, @movie["poster_path"]) %>

        <h1><%= @movie.name %></h1>
        <h3><%= link_to "Homepage", @movie.homepage %></h3>
        <p class="text-justify"><%= @movie.overview %><p>
      </div>
    </div>
    <div class="inline col-8 recommend">
      <div class="container">
        <h3 id="recommended">Recommended Movies</h3>
        <div class="row">
          <% @recommended_array.each do |movie| %>              
            <div class="inline col-4">
              <%= image_tag image_with_size(185, movie.poster_path) %>
              <h4 class="title"><%= link_to movie.original_title, movie_path(movie.id) %></h4>
            </div>
          <% end %>    
          <% if @recommended_array.empty? %>
            <h3> No Recommended Movies associated with this movie</h3>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

