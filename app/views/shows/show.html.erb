<div class="container">
  <div class="row">
    <div class="inline col-4">
      <div class="card">
      <h3>Featured Show</h3>
        <%= image_tag image_with_size(185, @show["poster_path"]) %> 

        <h1><%= @show.name %></h1>
        <h3><%= link_to "Homepage", @show.homepage %></h3>
        <p class="text-justify"><%= @show.overview %><p>
        <ul>
          <li>First Air Date: <%= @show.first_air_date %></li>
          <li>Created by: <%= @show["created_by"].map {|creator| creator["name"]}.join ", " %></li>    
          <li> Number of Seasons: <%= @show.number_of_seasons %></li>
          <li> Number of Seasons: <%= @show.number_of_episodes %></li>
        </ul>
      </div>
    </div>

    <div class="inline col-8 recommend">
      <div class="container">
        <h3 id="recommended">Recommended Shows</h3>
          <div class="row">
          <% @recommended_array.each do |show| %>              
            <div class="inline col-4">
              <%= image_tag image_with_size(185, show.poster_path) %>
              <h4 class="title"><%= link_to show.name, show_path(show.id) %></h4>
            </div>
          <% end %>    
          <% if @recommended_array.empty? %>
            <h3> No Recommended shows associated with this show</h3>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>